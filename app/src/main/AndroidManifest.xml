<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.oaklandcc.monstermelee">
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="sensorLandscape">
        <activity android:name=".viewControl.CreditsActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.BeatGameActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.GameOverActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.GiveUpActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.FightActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.EnemyIntroductionActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.SelectStatsActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.WonMatchActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.SelectCharacterActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".viewControl.StartActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>